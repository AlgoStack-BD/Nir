<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".view.Auth.access_nav">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="609dp"
            android:layout_height="358dp"
            android:layout_marginTop="400dp"
            android:src="@drawable/homeicon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/nirsplash"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />


        <LinearLayout
            android:id="@+id/accesslogin"
            android:layout_width="635dp"
            android:layout_height="55dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/coustomrectengular"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3">

            <TextView
                android:layout_width="105dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ralewaybold"
                android:text="@string/log_in"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/accesssignup"
            android:layout_width="635dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/coustomrectengulablue"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/or"
            app:layout_constraintStart_toStartOf="@+id/or"
            app:layout_constraintTop_toBottomOf="@+id/or">

            <TextView
                android:layout_width="105dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ralewaybold"
                android:text="@string/sign_up"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/ralewaysemibold"
            android:text="or"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@+id/accesslogin"
            app:layout_constraintStart_toStartOf="@+id/accesslogin"
            app:layout_constraintTop_toBottomOf="@+id/accesslogin" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>