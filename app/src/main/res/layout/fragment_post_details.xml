<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.main_frame.PostDetails">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:background="#FFFFFFFF"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:visibility="visible"
                android:id="@+id/imageRV"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                app:layoutManager="com.google.android.material.carousel.CarouselLayoutManager"
                />
            <ImageView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/home_image"
                android:scaleType="fitXY"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"/>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="15dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >


                    <ImageView

                        android:id="@+id/fvrt"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/favorutieselectedicon"
                        />

                    <ImageView
                        android:id="@+id/fvrtDone"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/favouriteselectedicon"
                        />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>




        </FrameLayout>


        <TextView
            android:id="@+id/txtOwnerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ralewaysemibold"
            android:padding="5dp"
            android:text="@string/DetailsHeadding"
            android:textColor="@color/colorSecendaryBlack"
            android:textSize="18dp"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout" />



        <LinearLayout

            android:id="@+id/linearLayout18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="9dp"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/txtOwnerName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtOwnerName">

