                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ralewaysemibold"
                        android:text="7"
                        android:textColor="@color/colorSecendary"
                        app:layout_constraintEnd_toEndOf="@+id/kitchenText"
                        app:layout_constraintStart_toStartOf="@+id/kitchenText"
