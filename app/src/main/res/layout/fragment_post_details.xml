                        android:textColor="@color/colorSecendary"
                        app:layout_constraintEnd_toEndOf="@+id/numOfdrowingroomText"
                        app:layout_constraintStart_toStartOf="@+id/numOfdrowingroomText"
                        app:layout_constraintTop_toBottomOf="@+id/numOfdrowingroomText" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linearLayout10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:src="@drawable/bathroom" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp">

                    <TextView
                        android:id="@+id/bathroomText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/ralewaysemibold"
                        android:text="@string/bathroom"
                        android:textColor="@color/colorSecendaryBlack"
