<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.frame.Home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/topbackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/nirsplash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/searchbackground"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/imageView5">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:src="@drawable/search_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/ralewayregular"
            android:text="Search Properties..." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:fontFamily="@font/ralewaysemibold"
            android:text="Sylhet"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"

            />


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/downLayer"
        android:layout_width="match_parent"
        android:layout_height="525dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                >

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:foregroundGravity="center_vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:id="@+id/home"
                            android:layout_width="80dp"
                            android:layout_height="38dp"
                            android:orientation="vertical"
                            android:background="@drawable/horizontal_button_circle"
                            android:backgroundTint="@color/selected"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Home"
                                android:textSize="20dp"
                                android:fontFamily="@font/ralewayregular"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="20dp"
                            android:id="@+id/appartment"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:background="@drawable/horizontal_button_circle"
                            android:backgroundTint="@color/white"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:text="Apartment"
                                android:textSize="20dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/ralewayregular"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="20dp"
                            android:id="@+id/hotel"
                            android:layout_width="80dp"
                            android:layout_height="38dp"
                            android:background="@drawable/horizontal_button_circle"
                            android:backgroundTint="@color/white"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hotel"
                                android:textSize="20dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/ralewayregular"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="20dp"
                            android:id="@+id/Vila"
                            android:layout_width="80dp"
                            android:layout_height="38dp"
                            android:background="@drawable/horizontal_button_circle"
                            android:backgroundTint="@color/white"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vila"
                                android:textSize="20dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/ralewayregular"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="20dp"
                            android:id="@+id/cottage"
                            android:layout_width="90dp"
                            android:layout_height="38dp"
                            android:background="@drawable/horizontal_button_circle"
                            android:backgroundTint="@color/white"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cottage"
                                android:textSize="20dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/ralewayregular"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>


                    </LinearLayout>



                </HorizontalScrollView>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/NearPost"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                >

                <TextView
                    android:id="@+id/nearpostText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ralewaybold"
                    android:text="Near from you"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.05"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nearpostText"
                    tools:listitem="@layout/nearpost" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/BeastForYou"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:id="@+id/bestfor_you"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ralewaybold"
                    android:text="Best for you"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.05"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/beastForYouRecyler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bestfor_you"
                    tools:listitem="@layout/public_post" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        </ScrollView>






    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>