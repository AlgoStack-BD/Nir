<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="20dp"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >





        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home_image"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >



            <RelativeLayout
                android:id="@+id/threedotmenulayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"

                >

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/custom_card_style"
                    android:backgroundTint="#60FFFFFF"

                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/approvaldot"
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:src="@drawable/pendingdot"
                            />

                        <TextView
                            android:id="@+id/statustext"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:text="Pending"
                            android:textColor="#353434"
                            android:fontFamily="@font/ralewaysemibold"
                            android:textSize="15dp"
                            />


                    </LinearLayout>



                </RelativeLayout>

                 <ImageView
                     android:layout_marginLeft="135dp"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:src="@drawable/threedotmenu"
                     android:id="@+id/threedotmenug"
                     />


            </RelativeLayout>





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rahim_h_ous"
                    android:layout_width="104dp"
                    android:layout_height="19dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentTop="true"
                    android:text="Rahim House"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ralewaysemibold"
                    android:textSize="15dp"
                    android:gravity="top"
                    />


                <TextView
                    android:id="@+id/sylhet_jind"
                    android:layout_width="192dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="2dp"
                    android:text="Sylhet, jinda Bazar, Bangladesh"
                    android:textSize="15dp"
                    android:textColor="#D4D4D4"
                    android:fontFamily="@font/ralewaysemibold"
                    android:gravity="top"
                    />

            </LinearLayout>



        </LinearLayout>

    </FrameLayout>






</com.google.android.material.card.MaterialCardView>